@model TheWorld.ViewModels.SignUpViewModel

<div class="container">
    
    <div class="col-md-6 col-md-offset-3">
        <h2>Cadastre-se</h2>
        <form method="post">
            @if (ViewBag.Message != null)
            {
                <div>@ViewBag.Message</div>
            }
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <div class="form-group">
                <label> Login </label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label> E-mail </label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"> Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirmation"> Confirmar Password</label>
                <input asp-for="PasswordConfirmation" type="password" class="form-control" />
                <span asp-validation-for="PasswordConfirmation" class="text-muted"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
