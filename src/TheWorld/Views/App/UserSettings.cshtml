
@model TheWorld.ViewModels.WebPostViewModel
<div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1 col-lg-6 col-lg-offset-3">
    <form method="post" class="well well">
        <fieldset>
            <legend>Settings</legend>
            <div class="col-md-6 col-xs-6">
                <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
                <div class="form-group">
                    <label> Title </label>
                    <input id="postTitle" asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-muted"></span>

                </div>
                <div class="form-group">
                    <label> Text </label>
                    <input id="postText" asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-muted"></span>
                </div>
                <div class="form-group">
                    <label> Youtube URL </label>
                    <input id="postURL" asp-for="VideoURL" class="form-control" />
                    <span asp-validation-for="VideoURL" class="text-muted"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Alterar" class="btn btn-success" />
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group text-center">
                    <img src="~/img/heresdoge100x100.png" alt="Imagem" class="headshot" />
                </div>
                <div class="form-group-sm" style="margin-bottom:15px;">
                    <label class="btn btn-primary btn-sm fa fa-upload" for="my-file-selector">
                        <input id="my-file-selector" type="file" style="display:none;">
                    </label>
                    <div class="col-xs-7 col-md-9 col-sm-9">
                        <input class="form-control" style="margin:auto" type="text" />
                    </div>

                </div>
                <div class="form-group text-center">
                    <button class="btn btn-success btn-sm" type="button">Alterar Imagem</button>
                </div>





            </div>



        </fieldset>

    </form>
</div>